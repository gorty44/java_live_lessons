package streams_part1;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;
import java.util.stream.Stream;

public class Streams {
	public static void main(String[] args) {
		List<String> array = Arrays.asList("hey", "hi", "hello", "bye", "goodbye");
		// ================= 1
		array.stream().forEach(e -> System.out.println("  " + e));
		// ================= 2
		array.stream().forEach(System.out::println);
		// ================= 3
		List<String> excitingWords = array.stream().map(e -> e + "!").collect(Collectors.toList());
		System.out.println(excitingWords);

		List<String> eyeWords = array.stream().map(e -> e.replace("i", "eye")).collect(Collectors.toList());
		System.out.println(eyeWords);

		String[] stringArray = { "hey", "hi", "hello", "bye", "goodbye" };
		String[] upperCaseWords = Stream.of(stringArray).map(String::toUpperCase).toArray(String[]::new);
		System.out.println(upperCaseWords);
	}
}
